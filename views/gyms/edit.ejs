<% layout('./layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Gym</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/gyms/<%=gym._id%>/?_method=PUT" method="POST" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="gym[title]" value="<%=gym.title%>"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="gym[location]" value="<%=gym.location%>"
                        required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="price-label">$</span>
                        </div>
                        <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)"
                            name="gym[price]" value="<%=gym.price%>" required>
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <% if(gym.images && gym.images.length !== 0) {%>
                    <% gym.images.forEach(function(img, i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                            <div class="form-check-inline">
                                <input type="checkbox" id="imag-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            </div>
                            <label for="imag-<%=i%>">Delete?</label>
                            <% }) %>
                            <%}%>
                </div>


                <div class="mb-3">
                    <label for="image" class="form-label">Selete Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="gym[description]"
                        required><%=gym.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Save</button>
                </div>
            </form>
            <form action="/gyms/<%=gym._id%>/?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
            <a href="/gyms">return to all gyms</a>
        </div>
    </div>
<% layout('./layouts/boilerplate') %>

    <h1>All gyms</h1>
    <div>
        <a href="/gyms/new">Add a new gym</a>
    </div>

    <% for (let gym of gyms) {%>
        <div>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= gym.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= gym.title%>
                        </h5>
                        <p class="card-text">
                            <%= gym.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= gym.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/gyms/<%= gym._id%>">View <%= gym.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>